@foreach (var item in Model.ClimateSurveys.ToList())
{

    <div class="col-md-4">
        <h2>@item.SurveyQuestion</h2>
        <p></p>
        <a asp-action="ViewQuestions"><button class="btn btn-primary">Bekijk vragen</button></a>
        <p></p>
        <p>
            <a asp-action="Edit" asp-controller="ClimateSurveys" asp-route-id="@item.Id"><button class="btn btn-primary">Pas vragen aan</button></a>
        </p>
        <p>
            <a asp-action="Delete" asp-controller="ClimateSurveys" asp-route-id="@item.Id"><button class="btn btn-primary">Verwijder enquete</button></a>
        </p>
    </div>

}


